{
  "name": "meme_downloader",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "tsc": "tsc",
    "start": "node build/index.js",
    "dev": "clear && ts-node-dev src/index.ts",
    "dev:full": "concurrently \"npm run dev\" \"cd ../client && npm run dev\"",
    "lint": "eslint --ext .ts .",
    "build": "tsc",
    "build:full": "rm -rf client/* && cd ../client && npm run build && cp -rf build/* ../server/client/ && cd ../server && tsc",
    "deploy": "npm run build:full && fly deploy"
  },
  "dependencies": {
    "axios": "^1.5.1",
    "blake2b": "^2.1.4",
    "cors": "^2.8.5",
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "instagram-private-api": "^1.46.1",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.7",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.4.10",
    "@types/blake2b": "^2.1.3",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.18",
    "@types/libsodium-wrappers": "^0.7.11",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "singleQuote": true
  }
}
